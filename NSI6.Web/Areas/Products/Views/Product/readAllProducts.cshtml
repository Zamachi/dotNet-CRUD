@model List<GamesTranslationModel>
@{
    int i = 1;
}
<table class="table table-dark">
  <thead>
    <tr>
      <th scope="col">No.</th>
      <th scope="col">Game name</th>
      <th scope="col">Game description</th>
      <th scope="col">Price</th>
    </tr>
  </thead>
  <tbody>
    @foreach(var game in Model)
    {
        <tr>
            <th scope="row">@(i++)</th>
                <td>
            <a asp-area="Products" asp-controller="Product" asp-action="getOneProduct" asp-route-id="@game.Games.Id">

                    @game.name
            </a>
                </td>
            <td>@game.description</td>
            <td>@game.Games.price</td>
        </tr>
    }
  </tbody>
</table>
